                </svg>
                <span>Orders</span>
              </a>

              <!-- Users -->
              <a href="/admin/users" class="nav-item" :class="currentPage === 'users' ? 'nav-active' : ''">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
