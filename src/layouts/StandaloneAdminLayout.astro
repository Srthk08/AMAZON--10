    <!-- Debug Alpine.js loading -->
    <script>
      function loadAlpineFallback() {
        console.warn('‚ö†Ô∏è Primary Alpine.js CDN failed, trying fallback...');
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js';
        script.defer = true;
        script.onload = function() {
          console.log('‚úÖ Alpine.js loaded from fallback CDN');
        };
        script.onerror = function() {
          console.error('‚ùå Both Alpine.js CDNs failed to load');
        };
        document.head.appendChild(script);
      }
      
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîç Checking Alpine.js availability...');
        // Wait a bit for Alpine to load
        setTimeout(() => {
          if (window.Alpine) {
            console.log('‚úÖ Alpine.js is loaded');
          } else {
            console.error('‚ùå Alpine.js is not loaded after timeout');
          }
        }, 1000);
        
        // Add click handlers for dashboard navigation
        console.log('üîß Setting up dashboard navigation handlers...');
        
        // Function to handle dashboard navigation
        window.navigateToDashboard = function() {
          console.log('üöÄ Navigating to dashboard...');
          window.location.href = '/admin';
        };
        
        // Add click handlers to all dashboard links
        const dashboardLinks = document.querySelectorAll('a[href="/admin"]');
        dashboardLinks.forEach((link, index) => {
          console.log(`üîó Found dashboard link ${index + 1}:`, link);
          link.addEventListener('click', function(e) {
            console.log('üñ±Ô∏è Dashboard link clicked:', e.target);
            // Let the default behavior happen (navigation)
          });
        });
        
        // Specific handler for navbar dashboard button
