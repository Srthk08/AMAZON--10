      this.items = this.items.filter(item => item.id !== productId);
      this.saveCart();
      this.renderCart();
    }

    updateItem(productId, updates) {
      const item = this.items.find(item => item.id === productId);
      if (item) {
        Object.assign(item, updates);
        this.saveCart();
        this.renderCart();
      }
    }

