    addItem(product) {
      // Only allow one product at a time
      if (this.items.length > 0) {
        // Replace existing item
        this.items = [];
      }
      
      this.items.push({
        ...product,
        quantity: 1,
        customName: '',
        logo: null,
        color: '#3B82F6',
        features: []
      });
      this.saveCart();
      this.renderCart();
